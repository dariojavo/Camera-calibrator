BoxLayout:
    orientation: 'horizontal'

    # First column for the Image
    BoxLayout:
        orientation: 'vertical'
        size: [1, .25]
        

        TabbedPanel:
            pos_hint: {"x": 0.0, "top": 1.0}
            do_default_tab: False
            TabbedPanelItem:
                text: "Rgb Oak1"
                Image:
                    id: rgb
                
            TabbedPanelItem:
                text: "Disparity Oak1"
                Image:
                    id: disparity

        TabbedPanel:
            pos_hint: {"x": 0.0, "top": 1.0}
            do_default_tab: False
            TabbedPanelItem:
                text: "Rgb Oak0"
                Image:
                    id: image
            TabbedPanelItem:
                text: "Disparity Oak0"
                Image:
                    id: disparity

    # Second column for attributes, sliders, and values
    GridLayout:
        cols: 3
        padding: 10
        spacing: 10



        # Attribute 5 with CheckBox
        Label:
            text: 'Auto Exposure'
        CheckBox:
            id: checkbox_5
            on_active: label_val_5.text = 'Enable' if self.active else 'Disable'
        Label:
            id: label_val_5
            text: 'Disable'

        # Attribute 6 with Slider that can be disabled
        Label:
            text: 'Exposure time'
        Slider:
            id: slider_6
            min: 0
            max: 100
            on_value: label_val_6.text = str(int(self.value))
            disabled: not checkbox_5.active  # initial state
        Label:
            id: label_val_6
            text: '0'

        # Attribute 10
        Label:
            text: 'Iso value'
        Slider:
            id: slider_10
            min: 0
            max: 100
            on_value: label_val_10.text = str(int(self.value))
        Label:
            id: label_val_10
            text: '0'

        # Attribute 1
        Label:
            text: 'Lens pos'
        Slider:
            id: slider_1
            min: 0
            max: 100
            on_value: label_val_1.text = str(int(self.value))
        Label:
            id: label_val_1
            text: '0'

        # Attribute 2
        Label:
            text: 'fps'
        Slider:
            id: slider_2
            min: 5
            max: 30
            on_value: label_val_2.text = str(int(self.value))
        Label:
            id: label_val_2
            text: '0'

        Button:
            id: save_button
            text: 'Save settings'
            font_size: '20sp'
            color: [0, 1, 1, 0.67]
            size_hint: None, None  # Allow the button to be any size
            size: 200, 50  # Set a specific button size
            pos_hint: {'right': 1, 'y': 0}  # Place it bottom-right
            on_release: 
                app.root.btn_clk()
                app.root.record_button = self


        Button:
            id: reset_button
            text: 'Reset settings'
            font_size: '20sp'
            color: [0, 1, 1, 0.67]
            size_hint: None, None  # Allow the button to be any size
            size: 200, 50  # Set a specific button size
            pos_hint: {'right': 0, 'y': 0}  # Place it bottom-right
            on_release: 
                app.root.btn_clk()
                app.root.record_button = self